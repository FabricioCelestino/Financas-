@page "/Account/Auth/SignIn"
@model Financas.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="container-mid">
    <div class="position">
        <div>
            <h2>Entrar</h2>
        </div>
        <form method="post" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="@Model.Input.Email" class="form-label"></label>
                <input asp-for="@Model.Input.Email" class="form-control" />
                <span asp-validation-for="@Model.Input!.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="@Model.Input.Password" class="form-label"></label>
                <input asp-for="@Model.Input.Password" class="form-control" />
                <span asp-validation-for="@Model.Input!.Password" class="text-danger"></span>
            </div>
            <div class="RememberMePosition">
                <input asp-for="@Model.Input.RememberMe" type="checkbox" class="form-check" />
                <label asp-for="@Model.Input.RememberMe" class="form-label"></label>
            </div>
            <div>
                <input type="submit" value="Sign" class="form-btn" />
            </div>

        </form>

    </div>
</div>